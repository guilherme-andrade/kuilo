<%= component_controller do %>
  <%= fieldset title: @title, subtitle: @subtitle do%>
    <%= reflex_input :street, label: t('components.address.form.street_label'), placeholder: t('components.address.form.street_placeholder') %>
    <%= reflex_input :floor, label: t('components.address.form.floor_label'), placeholder: t('components.address.form.floor_placeholder') %>
    <%= reflex_input :door, label: t('components.address.form.door_label'), placeholder: t('components.address.form.door_placeholder') %>
    <%= reflex_input :zip_code, label: t('components.address.form.zip_code_label'), placeholder: t('components.address.form.zip_code_placeholder') %>
    <%= reflex_input :country_code, as: :country, label: t('components.address.form.country_label'), placeholder: t('components.address.form.country_placeholder'), input_html: { class: 'form-select' } %>
    <%= reflex_input :city, as: :city, label: t('components.address.form.city_label'), placeholder: t('components.address.form.city_placeholder') %>
  <% end %>
<% end %>
