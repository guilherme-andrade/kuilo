<!DOCTYPE html>
<html>
  <%= render 'head' %>

  <%= component_controller(:body, data: { controller: 'dashboard/layout animations', action: 'cable-ready:after-morph@document->animations#animate' }) do %>
    <%= render(flashes) %>
    <%= content_tag(:div, class: dashboard_class) do %>
      <%= page_reflex_tag(:toggle_sidebar_extension, :button, icon('chevron-right'), class: toggle_class) %>

      <%= content_tag(:aside, class: %w[dashboard-aside]) do %>
        <%= render(sidebar) %>
        <% if extended? %>
          <%= sidebar_extension %>
        <% end %>
      <% end %>

      <%= content_tag(:section, class: %w[dashboard-body]) do %>
        <%= content_tag(:main, class: %w[dashboard-main]) do %>
          <%= @content %>
        <% end %>
      <% end %>
    <% end %>
    <%= render(sidepane) %>
  <% end %>
</html>
