<div class="container mt-6">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-6 col-xl-6">
      <div class="cell">
        <h1 class="h3 mb-5">Por favor complete o seu perfil</h1>
        <%= simple_form_for current_user, url: profile_path do |f| %>
          <section class="mb-5">
            <%= f.simple_fields_for :contact do |cf| %>
              <div class="row">
                <div class="col-6">
                  <%= cf.input :name, label: 'Nome (primeiro e último)' %>
                </div>
                <div class="col-6">
                  <%= cf.input :avatar, as: :file, input_html: { class: 'd-block' } %>
                </div>
                <div class="col-10">
                  <label for="phone" class="form-label">Nr de Telefone</label>
                  <div class="input-group mb-3">
                    <%= cf.input :phone_country_code, as: :select, collection: phone_country_codes, label: false, wrapper: false, input_html: { class: 'w-25 form-select'} %>
                    <%= cf.input :phone_number, as: :tel, label: false, wrapper: false %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-6">
                  <%= cf.input :government_id, label: 'Identificação Legal' %>
                </div>
                <div class="col-6">
                  <%= cf.input :vat_number, label: 'Número de Identificação Fiscal (VAT)' %>
                </div>
              </div>
            <% end %>
          </section>

          <section class="mb-5">
            <%= f.simple_fields_for :address do |cf| %>
              <div class="row">
                <div class="col-6">
                  <%= cf.input :street, label: 'Morada', placeholder: 'e.g. Rua Rainha Njinga 87' %>
                </div>
                <div class="col-3">
                  <%= cf.input :floor, label: 'Andar', placeholder: 'e.g. 11' %>
                </div>
                <div class="col-3">
                  <%= cf.input :door, label: 'Lado/Nr. Porta', placeholder: 'e.g. D' %>
                </div>
              </div>
              <div class="row">
                <div class="col-3">
                  <%= cf.input :city, label: 'Cidade', placeholder: 'e.g. Luanda' %>
                </div>
                <div class="col-3">
                  <%= cf.input :zip_code, label: 'Código Postal', placeholder: 'e.g. 1000' %>
                </div>
                <div class="col-6">
                  <%= cf.input :country_code, as: :country, label: 'País', placeholder: 'e.g. Angola', input_html: { class: 'form-select' } %>
                </div>
              </div>
            <% end %>
          </section>
          <div class="d-flex justify-content-end">
            <%= f.submit 'Salvar alterações', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
