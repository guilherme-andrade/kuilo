  <div class="alert alert-danger alert-dismissable" role="alert">
    <span class="close" data-dismiss="alert">
      <%= inline_svg_pack_tag 'media/icons/x.svg' %>
    </span>
    <%= flash[:alert] %>
  </div>
<% end %>
